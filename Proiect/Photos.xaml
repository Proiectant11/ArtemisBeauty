                        <Image Source="c6.png" Width="200" Height="200" Margin="5"
                                Stretch="UniformToFill" Style="{StaticResource ImageStyle}" MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
                        <Image Source="c15.png" Width="200" Height="200" Margin="5"
                                Stretch="UniformToFill" Style="{StaticResource ImageStyle}" MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
                        <Image Source="c7.png" Width="200" Height="200" Margin="5"
                                Stretch="UniformToFill" Style="{StaticResource ImageStyle}" MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
                        <Image Source="c8.png" Width="200" Height="200" Margin="5"
                                Stretch="UniformToFill" Style="{StaticResource ImageStyle}" MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
                        <Image Source="c9.png" Width="200" Height="200" Margin="5"
                                Stretch="UniformToFill" Style="{StaticResource ImageStyle}" MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
                        <Image Source="c10.png" Width="200" Height="200" Margin="5"
                                Stretch="UniformToFill" Style="{StaticResource ImageStyle}" MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
                        <Image Source="c11.png" Width="200" Height="200" Margin="5"
                                Stretch="UniformToFill" Style="{StaticResource ImageStyle}" MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
                        <Image Source="c12.png" Width="200" Height="200" Margin="5"
                                Stretch="UniformToFill" Style="{StaticResource ImageStyle}" MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
                        <Image Source="c13.png" Width="200" Height="200" Margin="5"
