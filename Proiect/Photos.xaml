                    </WrapPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Beauty">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <WrapPanel Margin="10" Background="Black">
                        <Image Source="b1.png" Width="200" Height="200" Margin="5"
                               Stretch="UniformToFill" Style="{StaticResource ImageStyle}" MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
                        <Image Source="b2.png" Width="200" Height="200" Margin="5"
                                Stretch="UniformToFill" Style="{StaticResource ImageStyle}" MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
                        <Image Source="b3.png" Width="200" Height="200" Margin="5"
