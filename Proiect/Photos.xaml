        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proiect"
        mc:Ignorable="d"
        Title="Photos" Height="500" Width="800"
        Background="Black"
        Icon="pack://application:,,,/Artemis .ico">
    <Grid>
