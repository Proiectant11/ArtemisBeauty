                    </WrapPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Manicure">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <WrapPanel Margin="10" Background="Black">
                        <Image Source="u1.png" Width="200" Height="300" Margin="5"
                                Stretch="UniformToFill" Style="{StaticResource ImageStyle}" MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
                        <Image Source="u2.png" Width="200" Height="300"
                                 Stretch="UniformToFill" Style="{StaticResource ImageStyle}" MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
                        <Image Source="u3.png" Width="200" Height="300"
                                Stretch="UniformToFill" Style="{StaticResource ImageStyle}" MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
                        <Image Source="u4.png" Width="200" Height="300" Margin="5"
