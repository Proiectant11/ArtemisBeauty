                               Stretch="UniformToFill" Style="{StaticResource ImageStyle}" MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
                        <Image Source="u7.png" Width="200" Height="300"
                                Stretch="UniformToFill" Style="{StaticResource ImageStyle}" MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
                    </WrapPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        <Grid Name="ImageOverlay" Background="#AA000000" Visibility="Collapsed">
            <Image Name="LargeImage" HorizontalAlignment="Center" VerticalAlignment="Center"
                   Stretch="Uniform" Margin="10"/>
            <Button Content="X" Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top"
                    Margin="10" Click="CloseOverlay_Click"/>
            <Button Content="⟨" Width="50" Height="50" HorizontalAlignment="Left" VerticalAlignment="Center"
                    Margin="10" Click="PrevButton_Click"/>
            <Button Content="⟩" Width="50" Height="50" HorizontalAlignment="Right" VerticalAlignment="Center"
                    Margin="10" Click="NextButton_Click"/>
        </Grid>
        <Button Click="BackButton_Click" RenderTransformOrigin="0.244,0.483" Margin="3,25,350,430">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-180.353"/>
                    <TranslateTransform X="22.346" Y="-0.307"/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Path Fill="Gold" Data="M 0 0 L 10 10 L 0 20 Z" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
